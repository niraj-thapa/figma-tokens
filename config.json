{
  "source": ["tokens/output.json"],
  "platforms": {
    "scss": {
      "transformGroup": "scss",
      "transforms": [
        "attribute/cti",
        "name/cti/kebab",
        "color/hex",
        "size/rem"
      ],
      "prefix": "lf",
      "buildPath": "build/scss/",
      "files": [
        {
          "destination": "_variables.scss",
          "format": "scss/variables",
          "options": {
            "outputReferences": true
          }
        }
      ]
    },
    "css": {
      "transformGroup": "css",
      "transforms": [
        "attribute/cti",
        "name/cti/kebab",
        "color/hex",
        "size/rem"
      ],
      "prefix": "lf",
      "buildPath": "build/css/",
      "files": [
        {
          "destination": "variables.css",
          "format": "css/variables",
          "options": {
            "outputReferences": true
          }
        }
      ]
    }
  }
}
